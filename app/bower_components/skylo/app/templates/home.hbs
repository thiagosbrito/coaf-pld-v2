<div class="methods section">
	<div class="container">
		<h3>Methods</h3>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="row">
			      <div class="col-md-4">
			      	<div id="start" class="btn btn-default btn-method">
				        start()
				    </div>
			      </div>
			      <div class="col-md-6 col-md-offset-2">
			        Start the loader
			      </div>
			    </div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="row">
			      <div class="col-md-4">
			        <div id="end" class="btn btn-default btn-method">
				        end()
				    </div>
			      </div>
			      <div class="col-md-6 col-md-offset-2">
			        Loader loads to 100% and fade out
			      </div>
			    </div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="row">
			      <div class="col-md-4">
			        <div id="set" class="btn btn-default btn-method">
				        set(50)
				    </div>
			      </div>
			      <div class="col-md-6 col-md-offset-2">
			      	Set position of the loading bar.
			      	<div class="code">[0 - 100]</div>
			      </div>
			    </div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="row">
			      <div class="col-md-4">
			        <div id="get" class="btn btn-default btn-method">
				        get()
				    </div>
			      </div>
			      <div class="col-md-6 col-md-offset-2">
			      	Get current position of the loading bar.
			      </div>
			    </div>
			</div>
		</div>

		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="row">
			      <div class="col-md-4">
			        <div id="inch" class="btn btn-default btn-method">
				        inch(10)
				    </div>
			      </div>
			      <div class="col-md-6 col-md-offset-2">
			        Loader will inch forward according to the parameters set.
			        <div class="code">[0 - 100]</div>
			      </div>
			    </div>
			</div>
		</div>

	</div>
</div>

